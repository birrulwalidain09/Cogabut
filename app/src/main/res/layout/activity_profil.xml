<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:id="@+id/navbar_profil"
        android:background="@drawable/button_shape" />

    <TextView
        android:id="@+id/username"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar_profil"
        android:hint="Birrul Walidain"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/username"
        android:id="@+id/email"
        android:paddingLeft="12dp"
        android:hint="birrulwalidain361@gmail.com"/>

    <ImageView
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="64dp"
        android:src="@drawable/lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/email"
        android:paddingLeft="70dp"
        android:layout_marginTop="-420dp"
        android:hint="Ubah Password" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:id="@+id/keluar"
        android:layout_marginTop="308dp"
        android:src="@drawable/keluar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/keluar"
        android:layout_marginVertical="20dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:hint="Keluar" />


</RelativeLayout>